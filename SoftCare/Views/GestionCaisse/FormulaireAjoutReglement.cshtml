<script type="text/Javascript">

			function GestionCaisse()
			{
                var MontantAPayer = document.getElementById("Montant").value;
                var MontantRecu = document.getElementById("MontantRecu").value;

                var Difference = MontantRecu - MontantAPayer;
                

                if (Difference == 0) {
                    document.getElementById("MontantARembourse").value = Difference;
                    document.getElementById("MontantRembourse").value = 0;
                    document.getElementById("MontantRembourse").style.display = "none";
                    document.getElementById("Reste").value = 0;
                }
                else if (Difference > 0) {
                    document.getElementById("MontantARembourse").value = Difference;
                    document.getElementById("MontantARembourse2").value = Difference;
                    document.getElementById("Reste").value = 0;
                }
                else
                {
                    document.getElementById("MontantARembourse").value = 0;
                    document.getElementById("MontantRembourse").style.display = "none";
                    document.getElementById("Reste").value = Difference;
                    document.getElementById("Reste2").value = Difference;
                }
			
			}

