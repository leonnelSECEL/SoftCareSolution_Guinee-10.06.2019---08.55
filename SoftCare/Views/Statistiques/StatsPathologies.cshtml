            theme: "light2", // "light1", "light2", "dark1", "dark2"
            title: {
                text: "Generation de statistiques sur le taux de pathologies"
            },
            titleFontSize: 16,
            axisY: {
                title: "Nombre de diagnostics"
            },
            data: [{
                type: "bar",
                dataPoints: @Html.Raw(ViewBag.DataPoints)
		}]
});
    chart.render();
 
}
</script>

<div id="chartContainer"></div>