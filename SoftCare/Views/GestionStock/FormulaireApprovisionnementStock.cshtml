@model SoftCare.ViewModels.ApprovisionnementStockVM
@{
    Layout = "../../Views/Shared/_SoftCareLayoutPage.cshtml";
    ViewBag.Title = "Approvisionnement du Stock Central";


    ViewBag.Btndisabled = "disabled=\"disabled\";";

    int counter = 0;

}

<div class="row" style="margin:1em">


    @using (Html.BeginForm("APPROVISIONNERPRODUITS", "GestionStock", FormMethod.Post, new { @class = "col-lg-12" }))
    {

        <input type="hidden" name="StockId" value="@Model.StockId" />

        <div class="row" style="margin-top:0em">
            <div class="col-lg-4 ">
                <div class="form-group">
                    <label for="@Model.NomStock" style="width:100%"> Stock Approvisionné </label>
                    <input type="text" class="form-control" id="@Model.NomStock" name="@Model.NomStock" value="@Model.NomStock" disabled="disabled" style="width:100%" />
                </div>
            </div>
            <div class="col-lg-5 pull-right">
                <div class="form-group">
                    <label style="color:#fff"> . </label>
                    <a href="~/GestionStock/CONSULTERLISTEPRODUITS" class="btn btn-warning" style="width:100%">
                        <span class="glyphicon glyphicon-circle-arrow-left"></span>
                        Annuler l'approvisionnement de ce Stock
                    </a>
                </div>
            </div>
        </div>

        <div class="row">

            <h5 class="col-lg-12" style="color:#000"> Approvisionnement du Stock Central </h5>

            <section class="col-lg-12 bloc-scrollable table-responsive table-scrollable" style="max-height:23em;">

                <table class="table table-striped table-condensed">

                    <thead>
                        <tr>
                            <th>  </th>
                            <th> Réf. </th>
                            <th> Intitulé</th>
                            <th> Qté en Stock</th>
                            <th> Qté Appro. </th>
                            <th> Date Exp.  </th>
                        </tr>
                    </thead>

                    <tbody>

                        @{
                            int i = 0;
                            String[] IdsProduitAApprovionner = new String[Model.Produits.Count()];
                            String[] QuantiteApprovisionner = new String[Model.Produits.Count()];
                            String[] DateExpiration = new String[Model.Produits.Count()];
                        }

                        @foreach (var Produit in Model.Produits)
                        {
                            counter++;
                            if (Produit != null)
                            {
                                IdsProduitAApprovionner[i] = Produit.ProduitID;

                                <tr>
                                    <td>
                                        <input type="checkbox" name="IdsProduitAApprovionner[@i]" value="@IdsProduitAApprovionner[i]" onclick="CheckQuantity(this,@i)">
                                        <input name="IdsProduitAApprovionner[@i]" type="hidden" value="false" />
                                    </td>
                                    <td><a href="~/GestionStock/CONSULTERPRODUIT/@Produit.ProduitID"> @Produit.Reference </a></td>
                                    <td>@Produit.Nom</td>
                                    <td>@Produit.QuantiteStock</td>

                                    <td>
                                        <div class="form-group" style="margin-bottom:0;">
                                            <input type="number" min="1"  class="form-control" name="QuantiteApprovisionner[@i]" id="QuantiteApprovisionner[@i]" style="width:10em; height:2em; display:none;"  />
                                        </div>
                                    </td>
                                    <td>
                                        <div class="form-group" style="margin-bottom:0;">
                                            <input type="date" class="form-control DateExpiration" name="DateExpiration[@i]" id="DateExpiration[@i]" style="width:100%; height:2em; display:none;" />
                                        </div>
                                    </td>
                                </tr>
                            }
                            i += 1;
                        }
                    </tbody>


                </table>
            </section>

        </div>

        <div class="row" style="margin-top:3em">
            <div class="col-lg-4 pull-right">
                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="Ajouter ces Produits dans ce Stock" style="width:100%" />
                </div>
            </div>
        </div>

    }

</div>

<script>
    var today = new Date().toISOString().split('T')[0];
    document.getElementsByClassName("DateExpiration")[0].setAttribute('min', today);

    function CheckQuantity(champ, id) {
        if (champ.checked == 1) {
            var qte = document.getElementById('QuantiteApprovisionner[' + id + ']');
            qte.style.display = "inline";

            var qte = document.getElementById('DateExpiration[' + id + ']');
            qte.style.display = "inline";
        }
        else {
            var qte = document.getElementById('QuantiteApprovisionner[' + id + ']');
            qte.style.display = "none";

            var qte = document.getElementById('DateExpiration[' + id + ']');
            qte.style.display = "none";
        }
    }

    function Verify() {
        var qte = document.getElementById('QuantiteApprovisionner[' + id + ']').value;
    }

</script>



