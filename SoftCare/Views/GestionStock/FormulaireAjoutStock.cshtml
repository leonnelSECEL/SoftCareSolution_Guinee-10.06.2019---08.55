@model SoftCare.ViewModels.StockVM2
@{
    Layout = "../../Views/Shared/_SoftCareLayoutPage.cshtml";
    ViewBag.Title = "Ajout d'un Nouveau Stock";
}

<div class="row" style="margin:3em">

    <div class="row">

        @using (Html.BeginForm("ENREGISTRERSTOCK", "GestionStock", FormMethod.Post, new { @class = "col-lg-12", }))
        {
        <div class="row" style="margin-top:0em">
           
            <div class="col-lg-10 col-lg-offset-1">
                <div class="form-group">
                    @Html.LabelFor(Model => Model.Nom)
                    @Html.TextBoxFor(Model => Model.Nom, new { @class = "form-control", required = "required", })
                </div>
            </div>

            <div class="col-lg-3 col-lg-offset-1">
                <div class="form-group">
                    @Html.LabelFor(model => model.ResponsableStock)
                    @Html.DropDownList("ResponsableStock", (SelectList)ViewBag.ListeSpecialiste, new { @class = "form-control", style = "display:inline; width:100%" })
                </div>
            </div>

            <div class="col-lg-3">
                <div class="form-group">
                    <label for="" style="width:100%"> Type de Stock </label>
                    <select class="form-control" name = "TypeStockId" >
                        @if (ViewBag.ListeStockType != null)
                        {
                            foreach (var stockType in (List<SoftCare.Models.STOCKTYPE>)ViewBag.ListeStockType)
                            {
                                <option value="@stockType.StockTypeID">@SoftCare.Models.CRYPTAGE.StringHelpers.Decrypt(stockType.Nom) </option>
                            }
                        }
                    </select>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="form-group">
                    @Html.LabelFor(Model => Model.IsStocktCentral)
                    @Html.CheckBoxFor(Model => Model.IsStocktCentral, new { @class = "form-control", })
                </div>
            </div>
        </div>

        <div class="row" style="margin-top:2em">


            <div class="col-lg-4 col-lg-offset-2">
                <div class="form-group">
                    <a href="~/GestionStock/CONSULTERLISTESTOCKS" class="btn btn-warning" style="width:100%">
                        <span class="glyphicon glyphicon-circle-arrow-left"></span>
                        Retourner à la liste des Stock
                    </a>
                </div>
            </div>

            <div class="col-lg-4 ">
                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="Enregistrer" style="width:100%" />
                </div>
            </div>
        </div>
        }

    </div>

</div>

