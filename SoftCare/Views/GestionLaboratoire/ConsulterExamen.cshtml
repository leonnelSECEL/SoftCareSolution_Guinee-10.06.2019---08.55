@model SoftCare.ViewModels.ExamenVM2
@{
    Layout = "../../Views/Shared/_SoftCareLayoutPage.cshtml";
    ViewBag.Title = "Dérails Examen Médical";
    int counter = 0;
}

<div class="row" style="margin:3em">

    @using (Html.BeginForm("CONSULTEREXAMEN", "GestionLaboratoire", FormMethod.Post, new { @class = "col-lg-12" }))
    {
        <input type="hidden" name="DossierId" value="@Model.DossierId" />
        <input type="hidden" name="ServiceId" value="@Model.ServiceId" />

        <div class="row" style="margin-top:0em">

            <div class="col-lg-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.Reference)
                    @Html.TextBoxFor(model => model.Reference, new { @class = "form-control", disabled = "disabled" })
                </div>
            </div>

            <div class="col-lg-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.Patient)
                    @Html.TextBoxFor(model => model.Patient, new { @class = "form-control", disabled = "disabled" })
                </div>
            </div>

            <div class="col-lg-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.DateExamen)
                    @Html.TextBoxFor(model => model.DateExamen, new { @class = "form-control", disabled = "disabled" })
                </div>
            </div>

            <div class="col-lg-3">
                <div class="form-group">
                    @Html.LabelFor(model => model.Medecin)
                    @Html.TextBoxFor(model => model.Medecin, new { @class = "form-control", disabled = "disabled" })
                </div>
            </div>

            <div class="col-lg-3">
                <div class="form-group">
                    @Html.LabelFor(model => model.ExamenType)
                    @Html.TextBoxFor(model => model.ExamenType, new { @class = "form-control", disabled = "disabled" })
                </div>
            </div>

            <div class="col-lg-2">
                <div class="form-group">
                    @Html.LabelFor(model => model.PrixExamen)
                    @Html.TextBoxFor(model => model.PrixExamen, new { @class = "form-control", disabled = "disabled" })
                </div>
            </div>

            <div class="col-lg-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.Service)
                    @Html.TextBoxFor(model => model.Service, new { @class = "form-control", disabled = "disabled" })
                </div>
            </div>

            <div class="col-lg-6">

                <div class="row">

                    <div class="col-lg-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.EstRealise)
                            @Html.TextBoxFor(model => model.EstRealise, new { @class = "form-control", disabled = "disabled" })
                        </div>
                    </div>

                    <div class="col-lg-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Description)
                            @Html.TextAreaFor(model => model.Description, new { @class = "form-control", style = "height:2.6em;" })
                        </div>
                    </div>

                </div>

            </div>

            <div class="col-lg-6">

                <div class="row">

                    <section class="col-lg-12 table-responsive" style="min-height:10em;overflow-x: auto; margin-top:1em;">

                        <table class="table table-striped table-condensed" style="margin-bottom:0px;">

                            @if (Model.Examens == null)
                            {
                                <caption style="color:#000"><h6> Aucun Détails d'Examen enregistré </h6></caption>
                            }
                            else
                            {
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Code Examen</th>
                                        <th>Nom </th>
                                        <th>Résultat </th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var ExamenDetails in Model.Examens)
                                    {
                                        if (ExamenDetails != null)
                                        {
                                            <tr>
                                                <td>@(++counter)</td>
                                                <td> @ExamenDetails.Code </td>
                                                <td>@ExamenDetails.Libele</td>
                                                <td>@if (ExamenDetails.EstNegatif) { <span> POSITIF </span>} else { <span> NEGATIF </span> } </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            }
                        </table>
                    </section>

                </div>
            </div>

        </div>
            <div class="row" style="margin-top:2em">

                    <div class="col-lg-4 col-lg-offset-4">
                        <div class="form-group">
                            <a href="~/GestionLaboratoire/CONSULTERLISTEEXAMENS" class="btn btn-warning" style="width:100%">
                                <span class="glyphicon glyphicon-circle-arrow-left"></span>
                                Retourner à la liste
                            </a>
                        </div>
                    </div>
                </div>
     }

</div>


