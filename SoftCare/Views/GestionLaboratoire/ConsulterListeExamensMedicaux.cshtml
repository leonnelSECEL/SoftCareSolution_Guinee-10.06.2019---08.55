@model IEnumerable<SoftCare.Models.EXAMENMEDICAL>

@{
    Layout = "../../Views/Shared/_SoftCareLayoutPage.cshtml";
    ViewBag.Title = "Examens Médicaux proposés par ce Laboratoire";
    ViewBag.Btndisabled = "disabled=\"disabled\";";
    int counter = 0;
}

<div class="row" style="margin:2em 0">

    <div class="col-lg-3 col-lg-offset-8">
        <a href="~/GestionLaboratoire/ENREGISTREREXAMENMEDICAL" class="btn btn-primary">
            <span class="glyphicon glyphicon-plus"></span>
            Ajouter Examen Médical
        </a>
    </div>


    <section class="col-lg-12 table-responsive" style="max-height: 37em;overflow-x: auto; margin: 2em 0">

        <table class="table table-striped table-condensed" style="margin-bottom:0px;">

            @if (Model == null)
            {
                <caption style="color:#000"><h6> Aucun Examen enregistré </h6></caption>
            }
            else
            {
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Code Examen</th>
                        <th>Libellé</th>
                        <th>Description </th>
                        <th>Date Creation</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var Examen in Model)
                    {
                        counter++;
                        if (Examen != null)
                        {
                            <tr>
                                <td>@counter</td>
                                <td>
                                    <a href="~/GestionLaboratoire/CONSULTEREXAMENMEDICAL/@SoftCare.Models.CRYPTAGE.StringHelpers.Decrypt(Examen.ExamenMedicalId)">
                                        @Examen.Code
                                    </a>
                                </td>
                                <td>@Examen.Libelle</td>
                                <td>@Examen.Description</td>
                                <td>@Examen.DateCreation</td>
                                <td>
                                    @*<a href="~/GestionLaboratoire/" class="btn btn-info btn-xs" title="Modifier cette ligne">
                                        <span class="glyphicon glyphicon-pencil"></span>
                                    </a>
                                    <a href="~/GestionLaboratoire/" class="btn btn-danger btn-xs" title="Supprimer cette ligne">
                                        <span class="glyphicon glyphicon-trash"></span>
                                    </a>*@
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            }
        </table>
    </section>



</div>