@model SoftCare.ViewModels.StockVM2
@{
    Layout = "../../Views/Shared/_SoftCareLayoutPage.cshtml";
    ViewBag.Title = "Consulter Stock";
}

<div class="row" style="margin:3em">

    <div class="row">

            @using (Html.BeginForm("", "", FormMethod.Post, new { @class = "col-lg-12" }))
            {
        <div class="row" style="margin-top:0em">
            <div class="col-lg-10 col-lg-offset-1">
                <div class="form-group">
                    @Html.LabelFor(Model => Model.Nom)
                    @Html.TextBoxFor(Model => Model.Nom, new { @class = "form-control", disabled = "disabled" })
                </div>
            </div>

            <div class="col-lg-3 col-lg-offset-1">
                <div class="form-group">
                    @Html.LabelFor(Model => Model.ResponsableStock)
                    @Html.TextBoxFor(Model => Model.ResponsableStock, new { @class = "form-control", disabled = "disabled" })
                </div>
            </div>

            <div class="col-lg-3">
                <div class="form-group">
                    @Html.LabelFor(Model => Model.IsStocktCentralString)
                    @Html.TextBoxFor(Model => Model.IsStocktCentralString, new { @class = "form-control", disabled = "disabled" })
                </div>
            </div>

            <div class="col-lg-4">
                <div class="form-group">
                    @Html.LabelFor(Model => Model.DateCreation)
                    @Html.TextBoxFor(Model => Model.DateCreation, new { @class = "form-control", disabled = "disabled" })
                </div>
            </div>

        </div>

             
                <div class="row" style="margin-top:3em">

                    
                    <div class="col-lg-4  col-lg-offset-4">
                        <div class="form-group">
                            <a href="~/GestionStock/CONSULTERLISTESTOCKS" class="btn btn-warning" style="width:100%" > 
                                <span class="glyphicon glyphicon-circle-arrow-left"></span>
                                Retourner à la liste des Stocks 
                            </a>
                        </div>
                    </div>
                </div>
            }

    </div>

</div>


