            <div class="col-lg-2">
                <a href="~/GestionPatient/CONSULTERREGISTREMEDICAL" class="btn btn-info" >Retourner au Registre Médical </a>    
            </div>
   
            @using (Html.BeginForm("CONSULTERARCHIVES", "GestionPatient", FormMethod.Post, new { @class = "col-lg-4 form-inline pull-right" }))
            {   
                <div class="row">
                   <div class="col-lg-4 col-lg-offset-4" style="padding: 2% 1%;text-align: right;">
                        <strong>@ViewBag.PlageAffichee sur @ViewBag.NombreDossierDB</strong>
                   </div>
                   <div class="col-lg-4 btn-group"  style="padding:0;"> 
                        <button class="btn btn-default" type="submit" name="sens" value="false" @if (!(Boolean)ViewBag.AfficheDebut){@ViewBag.Btndisabled} ><span class="glyphicon glyphicon-chevron-left"></span>&nbsp;</button>
                        <input type="hidden" name="id" value="@ViewBag.LastId" />
                        <input type="hidden" name="position" value="@ViewBag.Position" /> 
                        <button class="btn btn-default" type="submit" name="sens" value="true" @if (!(Boolean)ViewBag.AfficheFin)
                                                                                               {@ViewBag.Btndisabled} ><span class="glyphicon glyphicon-chevron-right"></span>&nbsp;</button> 
                   </div> 
                </div>
            }
</div>


<div class="row"> 
    
    <section class="col-lg-12 table-responsive" style="max-height: 37em;overflow-x: auto;">
         
           
                                   
        <table class="table @*table-bordered*@ table-striped table-condensed" style="margin-bottom:0px; margin-top: 2%;">               
                                       
            @if (Model == null)
            {                         
                <caption style="color:#000"><h6> Aucun Dossier archivé. </h6></caption>
            }else{               
                    <thead>
                        <tr> 
                             <th>Code Dossier</th> <th>Patient</th> <th>Téléphone</th> <th>Archivé le </th> 
                        </tr> 
                   </thead>
                    <tbody>   
                                         
                    @foreach (var patient in Model)
                    {
                       if(patient!=null)
                        {
                            
                            <tr><td><a href="~/GestionPatient/CONSULTERDOSSIER/@SoftCare.Models.CRYPTAGE.StringHelpers.Decrypt(patient.DossierId)">@patient.Code</a></td><td>@patient.Nom</td><td>@patient.Tel</td><td>@patient.DateArchive</td></tr>
                            
                        }
                        
                    }  

                            
                </tbody>
            }   
        </table>
         

    </section>
    
</div>