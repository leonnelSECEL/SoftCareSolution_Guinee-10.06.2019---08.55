@model IEnumerable<SoftCare.ViewModels.DiagnosticVM>

@{
    ViewBag.Title = "Ajout Nouvel Examen ";
    Layout = "~/Views/Shared/_SoftCareLayoutPage.cshtml";
}

<div class="row"> 
     

        @using (Html.BeginForm("ENREGISTREREXAMEN", "GestionLaboratoire", FormMethod.Get, new { @class = "col-lg-12" }))
        {

               <h6 class="col-lg-6" style="padding:20px;">
                   Après quel Diagnostic prescrire cet Examen ? 
                </h6>

                <div class="col-lg-6" style="padding:20px;">
                    <div class="row">
                        <div class="col-lg-6">
                            <a href="@Url.Action("CONSULTERRREGISTREMEDICAL", "GestionPatient")" class="btn btn-warning" style="width: 100%;">
                                Retourner aux Dossiers
                            </a>
                        </div>
                        <div class="col-lg-6">
                            <button class="btn btn-primary" type="submit" style="width: 100%;"> Séléctionner </button>
                        </div>
                    </div>
                </div>

                <section class="col-lg-12 table-responsive" style="max-height: 30em;overflow-y: auto;">

                    <table class="table table-bordered table-striped table-condensed" style="margin-bottom:0px;">

                        @if (Model.Count() == 0)
                        {
                            <caption style="color:#000"><h6>Il n'y aucun diagnostic enregistré </h6></caption>
                        }
                        else
                        {
                            <thead>
                                <tr>   <th>Séléction </th> <th>Date diagnostic </th> <th>Diagnostic</th> <th>Spécialiste</th>  </tr>
                            </thead>
                            <tbody>
                                @foreach (var diagnostic in Model)
                                {
                                    <tr>
                                        <td> <input type="radio" name="Id" value="@SoftCare.Models.CRYPTAGE.StringHelpers.Decrypt(diagnostic.Id)" id=""> </td>
                                        <td> @diagnostic.DateDiagnostic </td>
                                        <td> @diagnostic.Avis </td>
                                        <td>  @diagnostic.Specialiste </td>
                                    </tr>
                                }
                            </tbody>
                        }

                    </table>
                </section>

                <div class="col-lg-6 col-lg-offset-9" style="padding:20px;">
                    <div class="row">
                        @*<div class="col-lg-6">
                            <a href="@Url.Action("CONSULTERRREGISTREMEDICAL", "GestionPatient")" class="btn btn-warning" style="width: 100%;">Retourner aux Dossiers</a>
                        </div>*@
                        <div class="col-lg-6">
                            <button class="btn btn-primary" type="submit" style="width: 100%;"> Séléctionner </button>
                        </div>
                    </div>
                </div>


                }
    

        </div>

