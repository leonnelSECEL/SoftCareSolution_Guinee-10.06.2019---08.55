@model SoftCare.ViewModels.TraitementVM2

@{
    Layout = "../../Views/Shared/_SoftCareLayoutPage.cshtml";
    ViewBag.Title = "Ajout Traitement";
}


<div class="row" style="background-color:#ffffffdb; min-height: 46em;"> 
     
 <section class="col-lg-12" style="">
    
      @using (Html.BeginForm("AJOUTTRAITEMENT", "GestionPatient", FormMethod.Post, new { @class = "col-lg-12" }))
      {
        
          <div class="row">
              <div class="col-lg-6">
                <div class="form-group">

                    <input type="hidden" name="DiagnosticId" value="@Model.DiagnosticId" />


                    @Html.LabelFor(model => model.Diagnostic, new { style="" })
                    @Html.TextAreaFor(model => model.Diagnostic, new { @class = "form-control", @readonly="readonly", style="height: 20em;"})
                </div>

                <div class="form-group">                    
                    @Html.LabelFor(model => model.SpecialisteDiagnostic, new { style="" })
                    @Html.TextBoxFor(model => model.SpecialisteDiagnostic, new { @class = "form-control", style="", @readonly="readonly"})
                </div>
            </div>

            <div class="col-lg-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.Traitement, new { style="" })
                    @Html.TextAreaFor(model => model.Traitement, new { @class = "form-control", style="height: 20em;"})
                </div>

                <div class="form-group">
                @Html.LabelFor(model => model.SpecialisteTraitement, new { style="" })
                @Html.TextBoxFor(model => model.SpecialisteTraitement, new { @class = "form-control", style="", @readonly="readonly"})
                </div>

                <div class="form-group">
                   <div class="row">
                       <div class="col-lg-6">
                           <input id="text" type="submit" class="form-control btn btn-primary" value="Enregistrer" />
                        </div>

                       <div class="col-lg-6">
                            <a href="~/GestionPatient/CONSULTERDOSSIER/@SoftCare.Models.CRYPTAGE.StringHelpers.Decrypt(Model.DossierID)" class="btn btn-warning" >Retourner au Dossier</a>                            
                       </div>
                  </div>
            </div>
          </div>
        </div>  
      }
    
 </section>
