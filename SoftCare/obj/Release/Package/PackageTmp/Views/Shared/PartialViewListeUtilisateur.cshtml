@model IEnumerable<SoftCare.ViewModels.UtilisateurVM4>

<table class="table table-bordered table-striped table-condensed">
        
           
    @if (Model != null && Model.Count() != 0)
    {

        <thead>
            <tr>  <th> # </th><th> Noms utilisateurs </th> <th> Contanct </th> <th>Rôle </th> <th style="text-align:center"> Statut </th> </tr>
        </thead>
        <tbody>    
            @{ int count = 0; }
            @foreach (var user in Model)
            {
                count++; 
                if (user != null)
                {
                    <tr>   
                        <td>
                            @count
                        </td>
                        <td> 
                            <a href="~/CompteUtilisateur/MANAGEACCOUNT/@SoftCare.Models.CRYPTAGE.StringHelpers.Decrypt(user.Id)"> @user.NomUtilisateur  </a> 
                            @*<a href="#ModalConsulterUtilisateur" data-toggle="modal" data-backdrop="false"  id="profilUtilisateurLink" class="btn btn-link" title="Modifier ce profil">@user.NomUtilisateur</a>*@
                        </td> <td> @user.Contact </td> <td> @user.Role</td> 
                        <td style="text-align:center"> 
                            @if(user.Actif){                              
                              <button class="btn btn-info btn-xs" title="Ce compte est actif"><span class="glyphicon glyphicon-ok"></span></button> 
                            }
                            else{                              
                              <button class="btn btn-danger btn-xs" title="Ce compte est désactif"><span class="glyphicon glyphicon-minus-sign"></span></button>
                            }
                                
                        </td>

                    </tr>
                }
            }       
        </tbody>
        
    } 
              
</table>









