@model SoftCare.ViewModels.ResultatVM

<table class="table table-striped table-condensed" style="margin-bottom:0px;">

    <caption style="color:#000"><h6> Séléctionnez les Examens Médicaux dont vous souhaitez donner les résultats </h6></caption>

    <thead>
        <tr>  <th></th> <th>Code</th> <th>Libellé</th> <th>Test Positif ? </th>  <th>Commentaire</th>  </tr>
    </thead>

    @if (Model.Examens != null)
    {

    <tbody>
        @{
            int i = 0;
            String[] IdsExamenPrescris = new String[Model.Examens.Count()];
            String[] Resultats = new String[Model.Examens.Count()];
            String[] Commentaires = new String[Model.Examens.Count()];
        }


        @foreach (var exam in Model.Examens)
        {
            if (exam != null)
            {
                IdsExamenPrescris[i] = exam.Id;
                 
        <tr>            
            <td>
                <input type="checkbox" name="IdsProduitAApprovionner[@i]" value="@IdsExamenPrescris[i]" onclick="CheckQuantity(this,@i)">
                <input name="IdsProduitAApprovionner[@i]" type="hidden" value="false" />
            </td>
            <td>@exam.Code</td>
            <td> @exam.Libele</td>
            <td class="form-group">
                <input type="checkbox" name="Resultats[@i]" id="Resultats[@i]" class="form-control" style="height:2.5em; width:50%; display:none;" />
                <input name="Resultats[@i]" type="hidden" value="false" />
            </td>
            <td class="form-group">
                <textarea name="Commentaires[@i]" id="Commentaires[@i]" class="form-control" style="height:2.5em; width:100%; display:none;"></textarea>
            </td>
        </tr>
            }
            i += 1;
        }


    </tbody>
    }

</table>



<script>

    function CheckQuantity(champ, id) {
        if (champ.checked == 1) {
            var qte = document.getElementById('Resultats[' + id + ']');
            qte.style.display = "inline";

            var qte = document.getElementById('Commentaires[' + id + ']');
            qte.style.display = "inline";
        }
        else {
            var qte = document.getElementById('Resultats[' + id + ']');
            qte.style.display = "none";

            var qte = document.getElementById('Commentaires[' + id + ']');
            qte.style.display = "none";
        }
    }
</script>



