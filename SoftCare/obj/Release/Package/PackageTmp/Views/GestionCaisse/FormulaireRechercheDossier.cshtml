@model IEnumerable<SoftCare.Models.FACTURE>
@{
    Layout = "../../Views/Shared/_SoftCareLayoutPage.cshtml";
    ViewBag.Title = "Recherche Dossier Patient";
}

<div class="row" style="margin:2em">

    <section class="col-lg-12" style="margin:20px">

        @using (Ajax.BeginForm("RECHERCHERDOSSIER", "GestionCaisse", new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "patientList", LoadingElementId = "loader" }, new { @class = "form-inline" }))
        {
            <div class="form-group">
                <label class="sr-only" for="text">Code dossier Patient</label>
                <input type="text" class="form-control" id="codePatient" name="code" placeholder="Code dossier Patient">
            </div>
            <div class="form-group">
                <label class="sr-only" for="text">Noms et prénoms Patient</label>
                <input type="text" class="form-control" id="nomsPatient" name="nom" placeholder="Noms et prénoms Patient">
            </div>
            <div class="form-group">
                <label for="select" class="sr-only">Sexe: </label>
                <select name="sexe" class="form-control">
                    <option value="-1">Choisir le sexe</option>
                    <option value="0">Homme</option>
                    <option value="1">Femme</option>
                </select>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-info">Rechercher</button>
            </div>
        }
    </section>

    <section id="patientList" class="col-lg-12 table-responsive" style="max-height:41em;overflow-y: auto;">

        <div id="loader" class=" aletr" style="display:none">
            <img src="~/Content/images/ajax-loader.gif" style="height:200px; width:200px" />
        </div>

        @Html.Partial("PartialViewSearchDossierFacture")
    </section>

</div>


