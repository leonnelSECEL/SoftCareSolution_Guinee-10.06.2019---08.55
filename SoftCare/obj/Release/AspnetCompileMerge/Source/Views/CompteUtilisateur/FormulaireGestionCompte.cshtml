@model SoftCare.ViewModels.UtilisateurVM5

@{
    ViewBag.Title = "Gestion de Compte Utilisateur";
    Layout = "~/Views/Shared/_SoftCareLayoutPage.cshtml";

    String disableThisField = "disabled =\"disabled\" ";
}






<div class="row"> 
     

    @using (Html.BeginForm("MANAGEACCOUNT", "CompteUtilisateur", FormMethod.Post, new { @class = "col-lg-8 col-lg-offset-2" }))
    {
       
       <div class="row" style="margin-top:2em">
            <div class="col-lg-12">
                <div class="form-group">
                    <input type="checkbox" name="Actif" value="true"  @if (Model.Actif) { <text>checked="checked"</text> } style="height: 20px;width: 20px;"/> 
                    <input type="hidden" value="false" name="Actif" />
                    <label>Activer / Désactiver compte utilisateur</label>
                </div>
            </div>
         </div>
        
        <div class="row" style="margin-top:1em">
            <div class="col-lg-12">
                <div class="form-group">
                    @Html.LabelFor(model => model.NomUtilisateur) <span class="requiredInput">*</span>
                    @Html.TextBoxFor(model => model.NomUtilisateur, new { @class = "form-control", required="required",  })
                </div>
            </div>
         </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    @Html.LabelFor(model => model.Login) <span class="requiredInput">*</span>
                    @Html.TextBoxFor(model => model.Login, new { @class = "form-control", required="required",  })
                </div>
               
            </div>
         </div>
        
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                   @Html.LabelFor(model => model.Password)  <span class="requiredInput">*</span>
                   @Html.PasswordFor(model => model.Password, new { @class = "form-control", type = "password" })
                </div>
            </div>
        </div>

         <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    <label class="control-label" for="RoleID" style = "width:100%;">Rôle utilisateur <span class="aquiredInput">*</span></label>
                    
                    <select class="form-control" name="RoleID" style="display:inline; width:100%">
                             
                        @if (ViewBag.ListeRole != null)
                        {
                            String TypeSelected = "";
                            foreach (var role in (List<SoftCare.ViewModels.RoleVM>)ViewBag.ListeRole) 
                            {
                                    TypeSelected = "";
                                     
                                    if(Model.RoleID == role.RoleID)
                                    {
                                        TypeSelected = "selected=\"selected\" ";
                                    }
                                 
                                    <option value="@role.RoleID" @TypeSelected  >@role.Intitule</option>
                            }                             
                        }
                    </select>  

                 </div>
            </div>
        </div>
        
         <div class="row" style="margin-top:2em">
            <div class="col-lg-6">
                 <div class="form-group">           
                     <input class="btn btn-primary" type="submit" value="Enregistrer" style="width: 100%;" />
                 </div>
            </div>
             <div class="col-lg-6">
                 <div class="form-group">
                     <a href="~/CompteUtilisateur/CONSULTERLISTEUTILISATEUR" class="btn btn-warning" style="width: 100%;">
                         <span class="glyphicon glyphicon-circle-arrow-left"></span>
                         &nbsp; Retourner à la liste des Utilisateurs
                     </a>
                 </div>
            </div>
        </div>
        
        <div class="row" >
           <div class="form-group"> 
               @Html.Partial("../Shared/PartialViewRequiredInputInfos")                 
          </div>
       </div>
       

    }
 </div>



