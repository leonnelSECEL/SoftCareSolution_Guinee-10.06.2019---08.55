@model SoftCare.ViewModels.ParametreVM2 

@{
    Layout = "../../Views/Shared/_SoftCareLayoutPage.cshtml";
    ViewBag.Title = "Consulter Paramètres de "+@Model.Patient;
}


<div class="row" style="margin-top:2%;"> 
     
 <section class="col-lg-12">
    

     <form class="col-lg-12">
     
          <input type="hidden" name="DossierID" value="@Model.DossierID" />

         <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    @Html.LabelFor(model => model.Patient, new  { style = "width:11.5%;" })
                    @Html.TextBoxFor(model => model.Patient, new { @class = "form-control", style="display:inline; width:88%", disabled="disabled"})
                </div>
            </div>
        </div>
        
         <div class="row">
            <div class="col-lg-5">

                
                <input type="hidden" name="DossierID" value="@ViewBag.DossierId" />

                <div class="form-group">
                    @Html.LabelFor(model => model.Temperature, new  { style = "width:30%;" })
                    @Html.TextBoxFor(model => model.Temperature, new { @class = "form-control", style="display:inline; width:65%", disabled="disabled"})
                </div>
            
                <div class="form-group">
                    @Html.LabelFor(model => model.Poids, new { style="width:30%" })
                    @Html.TextBoxFor(model => model.Poids, new { @class = "form-control", style="display:inline; width:65%", disabled="disabled"})
                </div>          
      
                <div class="form-group">
                    @Html.LabelFor(model => model.Tension, new { style="width:30%" })
                    @Html.TextBoxFor(model => model.Tension, new { @class = "form-control", style="display:inline; width:65%", disabled="disabled"})
                </div>
            
                <div class="form-group">
                    @Html.LabelFor(model => model.Pouls, new { style="width:30%" })
                    @Html.TextBoxFor(model => model.Pouls, new { @class = "form-control", style="display:inline; width:65%", disabled="disabled"})
                </div>

            </div>

            <div class="col-lg-7">

                <div class="row">
                    <div class="col-lg-12">
                         <div class="form-group">
                            @Html.LabelFor(model => model.Tension, new { style="width:15%" })
                            @Html.TextBoxFor(model => model.Tension, new { @class = "form-control", style="display:inline; width:84%", disabled="disabled"})
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Pouls, new { style="width:15%" })
                            @Html.TextBoxFor(model => model.Pouls, new { @class = "form-control", style="display:inline; width:84%", disabled="disabled"})
                        </div>
                        <div class="form-group">                 
                            @Html.LabelFor(model => model.Avis, new { style="width:25%" })
                            @Html.TextAreaFor(model => model.Avis, new { @class = "form-control", style="display:inline; width:100%;height: 4.5em;", disabled="disabled"})
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </form>
    
 </section>

  
<div class="col-lg-10 col-lg-offset-2">
   
    <div class="row">
    @if(!Model.isArchived)
    {
        <div class="col-lg-5">
            <div class="form-group">           
                <a href="~/GestionPatient/AJOUTPARAMETRE/@SoftCare.Models.CRYPTAGE.StringHelpers.Decrypt(Model.DossierID)" class="btn btn-primary" style="width: 100%;">
                    <span class="glyphicon glyphicon-plus"></span>Paramètre
                </a>
            </div>
        </div>
    }
        <div class="col-lg-5">
            <div class="form-group">           
                <a href="~/GestionPatient/CONSULTERDOSSIER/@SoftCare.Models.CRYPTAGE.StringHelpers.Decrypt(Model.DossierID)" class="btn btn-warning" style="width: 100%;"> 
                    <span class="glyphicon glyphicon-circle-arrow-left"></span> Retourner au Dossier 
                </a>
            </div>
        </div>
    </div>
</div>

  <section class="col-lg-12 table-responsive" style="max-height: 53em;overflow-y: auto;">
            <table class="table table-bordered table-striped table-condensed" style="margin-bottom:0px;">
                   
               
                @if (Model.ListeParametres.Count == 0)
                {                         
                        <caption style="color:#000"><h6>Il n'y aucun traitement enregistré </h6></caption>
                        
                }else {
                              
                    <caption style="color:#000"><h6>Listes des autres paramètres du patient</h6></caption>                 
                <thead>
                    <tr> <th>Date</th> <th>T(°C)</th> <th>Pouls</th> <th>Tension</th> <th>Poids</th> <th>Avis</th>  </tr>           
                </thead>
               <tbody>                        
                    @foreach (var parametre in Model.ListeParametres)
                    {
                            <tr>  <td> <a href="~/GestionPatient/CONSULTERPARAMETRE/@SoftCare.Models.CRYPTAGE.StringHelpers.Decrypt(parametre.ParametreID)" >    @parametre.DatePrise.ToShortDateString() </a> </td> <td> @parametre.Temperature </td> <td> @parametre.Pouls  </td> <td> @parametre.Tension  </td> <td> @parametre.Poids </td> <td> @parametre.Avis  </td> </tr>
                    }                        
                </tbody>
                }

            </table>
        </section>

</div>



