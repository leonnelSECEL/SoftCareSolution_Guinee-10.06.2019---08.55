@{
    ViewBag.Title = "Statistiques générées";
     Layout = "~/Views/Shared/_SoftCareLayoutPage.cshtml";
}

<script type="text/javascript" src="~/Content/scripts/canvasjs.min.js"></script>



<script>
    window.onload = function () {
 
        var chart = new CanvasJS.Chart("chartContainer", {
            animationEnabled: true,
            title: {
                text: "Courbe d'évolution des paramètres du patient"
            },
            axisY: {
                includeZero: false
            },
            toolTip: {
                shared: true
            },
            data: [{
                type: "line",
                name: "Poids (Kgs)",
                showInLegend: true,
                dataPoints: @Html.Raw(ViewBag.DataPoints1)
		}, {
		    type: "line",
		    name: "Temperatures (°C)",
		    showInLegend: true,
		    dataPoints: @Html.Raw(ViewBag.DataPoints2)
		}, {
		    type: "line",
		    name: "Pouls (bpm)",
		    showInLegend: true,
		    dataPoints: @Html.Raw(ViewBag.DataPoints3)
		}]
        });
    chart.render();
 
}
</script>

<div class="row">
<div id="chartContainer" ></div>

  <div class="col-lg-2">
                <div class="form-group" style="margin-top:1%;">           
                    <a href="~/GestionPatient/CONSULTERDOSSIER/@ViewBag.DossierID" class="btn btn-warning"> <span class="glyphicon glyphicon-circle-arrow-left"></span> Dossier </a>
                </div>
        </div>

</div>
