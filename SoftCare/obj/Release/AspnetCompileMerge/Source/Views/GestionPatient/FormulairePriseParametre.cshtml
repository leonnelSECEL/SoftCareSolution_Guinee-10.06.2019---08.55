@model SoftCare.ViewModels.ParametreVM

@{
    Layout = "../../Views/Shared/_SoftCareLayoutPage.cshtml";
    ViewBag.Title = "Formulaire prise de paramètres";
}


<div class="row" style="margin-top:4%; max-height:50%;">
     
 <div class="col-lg-12">
    
    @using (Html.BeginForm("AJOUTPARAMETRE", "GestionPatient", FormMethod.Post, new { @class = "col-lg-12" }))
    {
      
        <div class="row">
            <div class="col-lg-5">

                
                <input type="hidden" name="DossierID" value="@ViewBag.DossierId" />

                <div class="form-group">
                    @Html.LabelFor(model => model.Temperature, new  { style = "width:30%;" })
                    @Html.TextBoxFor(model => model.Temperature, new { @class = "form-control", style="display:inline; width:65%"})
                </div>
            
                <div class="form-group">
                    @Html.LabelFor(model => model.Poids, new { style="width:30%" })
                    @Html.TextBoxFor(model => model.Poids, new { @class = "form-control", style="display:inline; width:65%"})
                </div>          
      
                <div class="form-group">
                    @Html.LabelFor(model => model.Tension, new { style="width:30%" })
                    @Html.TextBoxFor(model => model.Tension, new { @class = "form-control", style="display:inline; width:65%"})
                </div>
            
                <div class="form-group">
                    @Html.LabelFor(model => model.Pouls, new { style="width:30%" })
                    @Html.TextBoxFor(model => model.Pouls, new { @class = "form-control", style="display:inline; width:65%"})
                </div>

            </div>

            <div class="col-lg-7">
                <div class="form-group">                 
                    @Html.LabelFor(model => model.Avis, new { style="width:30%" })
                    @Html.TextAreaFor(model => model.Avis, new { @class = "form-control", style="display:inline; width:100%;height: 6.2em;"})
                </div>

                <div class="form-group">
                    <label for="select">Spécialiste compétent </label>
                    @Html.DropDownList("SpecialisteID", (SelectList)ViewBag.ListeSpecialiste, new { @class = "form-control", style = "display:inline; width:100%" })

                </div>
            </div>

        </div>
          
        <div class="row" style="margin-top:8%">
            <div class="col-lg-2 col-lg-offset-4">
                 <div class="form-group">           
                     <input class="btn btn-primary" type="submit" value="Enregistrer" />
                 </div>
            </div>
             <div class="col-lg-2">
                 <div class="form-group">           
                    <a href="~/GestionPatient/CONSULTERDOSSIER/@SoftCare.Models.CRYPTAGE.StringHelpers.Decrypt(Model.DossierID)" class="btn btn-warning"> Annuler </a>
                 </div>
            </div>
        </div>
      
 
    }

    
    
 </div>

</div>
