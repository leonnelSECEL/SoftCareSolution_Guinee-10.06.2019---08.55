@model SoftCare.Models.LABORATOIREOUTILS
@{
    Layout = "../../Views/Shared/_SoftCareLayoutPage.cshtml";
    ViewBag.Title = "Ajout Matériel au Plateau Technique";
}

<div class="row" style="margin:3em">

    @using (Html.BeginForm("ENREGISTRERMATERIEL", "GestionLaboratoire", FormMethod.Post, new { @class = "col-lg-12" }))
    {
            <div class="row">
                <div class="col-lg-8">
                    <div class="form-group">
                        @Html.LabelFor(Model => Model.Libelle) Matériel
                        @Html.TextBoxFor(Model => Model.Libelle, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        @Html.LabelFor(Model => Model.Laboratoire.Libelle) Laboratoire
                        <select id="sexe" name="Model.Laboratoire.Libelle" class="form-control">
                            <option value="0">Labo 1</option>
                            <option value="1">Labo 2</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="row">

                <div class="col-lg-4">
                    <div class="row">
                       
                        <div class="col-lg-12">
                            <div class="form-group">
                                @Html.LabelFor(Model => Model.Rayon.Nom) du Rayon
                                <select id="sexe" name="Model.Rayon.Nom" class="form-control">
                                    <option value="0">Rayon 1 - Etage 1 </option>
                                    <option value="1">Rayon 2 - Etage 2 </option>
                                    <option value="3">Rayon 3 - Etage 3 </option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                @Html.LabelFor(Model => Model.Rayon.Nom) du Stock
                                <select id="sexe" name="Model.Rayon.Nom" class="form-control">
                                    <option value="0"> Magasin Central </option>
                                    <option value="1"> Pharmacie </option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-8">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                @Html.LabelFor(Model => Model.Description) du Materiel
                                @Html.TextAreaFor(Model => Model.Description, new { @class = "form-control", style = "height:7.4em" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row" style="margin-top:3em">

                <div class="col-lg-4 col-lg-offset-2">
                    <div class="form-group">
                        <input class="btn btn-primary" type="submit" value="Enregistrer" style="width:100%" />
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <a href="~/GestionLaboratoire/CONULTERLISTEMATERIEL" class="btn btn-warning" style="width:100%">
                            <span class="glyphicon glyphicon-circle-arrow-left"></span>
                            Retourner à la liste des Matériels
                        </a>
                    </div>
                </div>
            </div>
        }

    </div>



