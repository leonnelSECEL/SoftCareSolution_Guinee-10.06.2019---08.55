@model IEnumerable<SoftCare.Models.EXAMEN>

@{
    Layout = "../../Views/Shared/_SoftCareLayoutPage.cshtml";
    ViewBag.Title = "Recherche Materiel du Plateau Medical";
}


<div class="row">


    <section class="col-lg-12" style="margin:3em">

        @using (Ajax.BeginForm("", "", new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "patientList", LoadingElementId = "loader" }, new { @class = "row" }))
        {

            <div class="col-lg-4">
                <div class="form-group">
                    <label class="sr-only" for="text"> Réf. Materiel  </label>
                    <input type="text" class="form-control" id="ReferenceExamen" name="ReferenceExamen" placeholder="Réf. Materiel">
                </div>
            </div>

            <div class="col-lg-3">
                <div class="form-group">
                    <label class="sr-only" for="text"> Laboratoire </label>
                    <select name="sexe" class="form-control">
                        <option value="-1"> -- Laboratoire -- </option>
                        <option value="0"> Labo 1 </option>
                        <option value="1"> Labo 2 </option>
                    </select>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="form-group">
                    <button type="submit" class="btn btn-info" style="width:100%">Rechercher</button>
                </div>
            </div>
        }
    </section>

    <section id="patientList" class="col-lg-12 table-responsive" style="max-height:41em;overflow-y: auto;">

        <div id="loader" class=" aletr" style="display:none">
            <img src="~/Content/images/ajax-loader.gif" style="height:200px; width:200px" />
        </div>

        @Html.Partial("PartialViewSearchDossier")
    </section>




</div>