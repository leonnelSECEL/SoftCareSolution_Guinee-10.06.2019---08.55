@model SoftCare.Models.MALADIE

@{
    ViewBag.Title = "Editer Maladie";
    Layout = "~/Views/Shared/_SoftCareLayoutPage.cshtml";
}


<div class="row"> 
         
    @using (Html.BeginForm("EDITERMALADIE", "Reglages", FormMethod.Post, new { @class = "col-lg-12" }))
    {
        <div class="row" style="margin-top:1em"> 

            <div class="col-lg-12">

                <div class="row">
                   <div class="col-lg-6">
                      <div class="form-group">
                          <label class="control-label" for="Intitule" style = "width:100%;">Intitulé Maladie </label>
                          <input class="form-control" id="Intitule" name="Intitule" type="text" value="@SoftCare.Models.CRYPTAGE.StringHelpers.Decrypt(Model.Intitule)" />

                          <input id="MaladieID" name="MaladieID" type="hidden" value="@SoftCare.Models.CRYPTAGE.StringHelpers.Decrypt(Model.MaladieID)" />
                      </div>
                   </div>
                </div>
                                
                <div class="row">                   
                   <div class="col-lg-4">
                      <div class="form-group">           
                         <input class="btn btn-primary" type="submit" value="Enregistrer" style="width: 70%;" />
                      </div>
                   </div>
                   <div class="col-lg-4">
                      <div class="form-group">           
                          <a href="~/Reglages/SUPPRIMERGROUPEMALADIE/@Model.MaladieID" class="btn btn-warning" style="width: 70%;">
                              <span class="glyphicon glyphicon-circle-arrow-left"></span> 
                              &nbsp; &nbsp; Supprimer 
                          </a>
                      </div>
                   </div>

                </div>

            </div>
       
        </div>
    }

</div>

