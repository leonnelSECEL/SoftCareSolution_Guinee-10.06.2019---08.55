@model SoftCare.ViewModels.TransfertStockVM
@{
    Layout = "../../Views/Shared/_SoftCareLayoutPage.cshtml";
    ViewBag.Title = "Transfert de Stock";

    int counter = 0;

    var ListeProduit = Model.ListeProduit;
}

<div class="row" style="margin:3em">


        @using (Html.BeginForm("", "", FormMethod.Post, new { @class = "col-lg-12" }))
        {
        <div class="row" style="margin-top:0em">
            <div class="col-lg-6">
                <div class="form-group">
                    <label for="@Model.StockTo.StockID" style="width:100%" > Stock de départ </label>
                    <select class="form-control" name="@Model.StockTo.StockID" id="@Model.StockTo.StockID">
                        @if (ViewBag.ListeStock != null)
                        {
                            foreach (var stock in (List<SoftCare.ViewModels.StockVM>)ViewBag.ListeStock)
                            {
                                <option value="@stock.Id">@stock.Nom </option>
                            }
                        }
                    </select>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="form-group">
                    <label style="width:100%" for="@Model.StockTo.StockID"> Stock d'arriver </label>
                    <select class="form-control" name="@Model.StockTo.StockID" id="@Model.StockTo.StockID">
                        @if (ViewBag.ListeStock != null)
                        {
                            foreach (var stock in (List<SoftCare.ViewModels.StockVM>)ViewBag.ListeStock)
                            {
                                <option value="@stock.Id">@stock.Nom </option>
                            }
                        }
                    </select>
                </div>
            </div>
        </div>

        <div class="row">

            <h5 style="color:#000"> Selectionner la Liste des Produits ou Services à Transferer </h5>

            <section class="col-lg-12 bloc-scrollable table-responsive table-scrollable" style="max-height:23em;">

                <table class="table table-striped table-condensed">

                    <thead>
                        <tr>
                            <th></th>
                            <th> Réf. </th>
                            <th> Intitulé</th>
                            <th> Date Expiration</th>
                            <th> Quantité </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var Produit in ListeProduit)
                        {
                            counter++;
                            if (Produit != null)
                            {
                                <tr>
                                    <td>@counter</td>
                                    <td><a href=""> @Produit.Reference </a></td>
                                    <td>@Produit.Nom</td>
                                    <td>@Produit.DateExpiration</td>
                                    <td>@Produit.QuantiteStock</td>
                                    
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </section>

         </div>

         <div class="row" style="margin-top:3em">

            <div class="col-lg-4 col-lg-offset-2">
                <div class="form-group">
                    <a href="" class="btn btn-warning" style="width:100%">
                        <span class="glyphicon glyphicon-circle-arrow-left"></span>
                        Annuler 
                    </a>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="Transferer" style="width:100%" />
                </div>
            </div>

         </div>
        }

    </div>



