@model SoftCare.Models.GROUPEMALADIE

@{
    ViewBag.Title = "Editer Groupe Maladies";
    Layout = "~/Views/Shared/_SoftCareLayoutPage.cshtml";
}


<div class="row"> 
         
    @using (Html.BeginForm("EDITERGROUPEMALADIE", "Reglages", FormMethod.Post, new { @class = "col-lg-12" }))
    {
        <div class="row" style="margin-top:1em"> 

            <div class="col-lg-12">

                <div class="row">
                   <div class="col-lg-6">
                      <div class="form-group">
                           <label class="control-label" for="IntituleGroupe" style = "width:100%;">Intitulé Groupe </label>
                           <input class="form-control" id="IntituleGroupe" name="IntituleGroupe" type="text" value="@SoftCare.Models.CRYPTAGE.StringHelpers.Decrypt(Model.IntituleGroupe)" />
                      </div>
                   </div>
                </div>

                
                <div class="row">                   
                   <div class="col-lg-4">
                      <div class="form-group">           
                         <input class="btn btn-primary" type="submit" value="Enregistrer" style="width: 70%;" />
                      </div>
                   </div>
                   <div class="col-lg-4">
                      <div class="form-group">           
                          <a href="~/Reglages/SUPPRIMERGROUPEMALADIE/@Model.GroupeMaladieID" class="btn btn-warning" style="width: 70%;">
                              <span class="glyphicon glyphicon-circle-arrow-left"></span> 
                              &nbsp; &nbsp; Supprimer ce Groupe 
                          </a>
                      </div>
                   </div>
                </div>
            </div>
       
             </div>
    }
</div>




