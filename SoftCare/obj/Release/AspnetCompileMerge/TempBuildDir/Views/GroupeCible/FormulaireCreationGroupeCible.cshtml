@model SoftCare.ViewModels.GroupeCibleVM

@{
    Layout = "~/Views/Shared/_SoftCareLayoutPage.cshtml";
    ViewBag.Title = "Création Programme ";
}


<div class="row" style="margin-top:4%">
     
 <div class="col-lg-12">
    
    @using (Html.BeginForm("CREERNOUVEAUGROUPE", "GroupeCible", FormMethod.Post, new { @class = "col-lg-12" }))
    {
      
     <div class="row">
         <div class="col-lg-12">
             <div class="form-group">
                 <label class="control-label" for="Intitule" style="width:34%;"> Intitulé du Programme </label>
                 <input class="form-control" id="Intitule" name="Intitule" placeholder="Intitulé du Programme" type="text" style="display:inline;" />
             </div>
         </div>
         <div class="col-lg-12">
             <div class="form-group">
                 <label for="select" style="width:34%"> Type de ce Programme </label>

                 <select class="form-control" name="Type" style="display:inline; width:65%">

                     <option value="0">--- Types Programmes --- </option>

                     @if (ViewBag.ListeDesTypesDeGC != null)
                     {

                         foreach (var type in (List<SoftCare.Models.TYPEGROUPE>)ViewBag.ListeDesTypesDeGC)
                         {
                             <option value="@type.TypeGroupeID">@type.Objet</option>
                         }
                     }
                 </select>
             </div>
         </div>
         <div class="col-lg-12">
             <div class="form-group softcare-add-rdv-date">
                 <label class="control-label" for="DateClotureGroupe" style="width:34%;">Date prévisionnelle de clôture de ce Programme </label>
                 <input class="form-control" id="DateClotureGroupe" name="DateClotureGroupe" placeholder="aaaa-mm-jj" type="text" style="display:inline; width:65%" />
             </div>
         </div>
         <div class="col-lg-12">
             <div class="form-group">
                 <label for="select" style=""> Administrateur de ce groupe </label>
                 <select class="form-control" name="Administrateur" style="display:inline;">

                     <option value="0">--- Administrateurs --- </option>

                     @if (ViewBag.ListeDesAdministrateurs != null)
                     {
                         foreach (var adminGroupe in (List<SoftCare.ViewModels.UtilisateurVM2>)ViewBag.ListeDesAdministrateurs)
                         {
                             <option value="@adminGroupe.Id">@adminGroupe.Nom.</option>
                         }

                     }
                 </select>
             </div>
         </div>
         <div class="col-lg-12">
             <div class="form-group">
                 <label class="control-label" for="Objet" style="width:34%;">Objectif du Programme </label>
                 <textarea class="form-control" id="Objet" name="Objet" placeholder="Objet" style="display:inline; width:100%; height:8em;">@Model.Objet</textarea>
             </div>
         </div>
     </div>

        <div class="row" style="margin-top:4%">
            <div class="col-lg-4 col-lg-offset-2">
                 <div class="form-group">           
                     <input class="btn btn-primary" type="submit" value="Créer le Programme " style="width:100%" />
                 </div>
            </div>
             <div class="col-lg-4">
                 <div class="form-group">
                     <input class="btn btn-warning" type="reset" value="Réinitialiser" style="width:100%" />           
                    @*<a href="~/GestionPatient/CONSULTERDOSSIER/@Model.Id" class="btn btn-warning"> Annuler </a>*@
                 </div>
            </div>
        </div>
      
 
    }
    
 </div>

</div>








<script>
    $(document).ready(function () {
        var date_input = $('#DateClotureGroupe'); //our date input has the name "date"
        var container = $('.col-lg-3 .softcare-add-rdv-date').length > 0 ? $('.col-lg-3 .softcare-add-rdv-date').parent() : "body";
        var options = {
            format: 'yyyy-mm-dd', //  mm/dd/yyyy
            container: container,
            todayHighlight: true,
            autoclose: true,
        };
        date_input.datepicker(options);
    })                   
</script>

