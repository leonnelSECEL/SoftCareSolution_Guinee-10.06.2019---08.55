@model SoftCare.Models.CAISSEMOUVEMENT
@{
    Layout = "../../Views/Shared/_SoftCareLayoutPage.cshtml";
    ViewBag.Title = "Enregistrement Sorite Caisse";
}

<div class="row" style="margin:3em">

    <div class="row">

        @using (Html.BeginForm("", "", FormMethod.Post, new { @class = "col-lg-12" }))
        {

        <div class="row">

            <div class="col-lg-6">
                <div class="form-group">
                    @Html.LabelFor(Model => Model.Caisse.Nom) de la Caisse
                    @Html.TextBoxFor(Model => Model.Caisse.Nom, new { @class = "form-control", disabled = "disabled" })
                </div>
            </div>

            <div class="col-lg-6">
                <div class="form-group">
                    <label class="control-label" for="patient"> Nom Caissier(ère) </label>
                    <input type="text" id="patient" class="form-control" name="@ViewBag.Patient" value="Hamadou Nasser" disabled="disabled" style="width:100%" />
                </div>
            </div>

            <div class="col-lg-12">
                <div class="form-group">
                    @Html.LabelFor(Model => Model.Raison)
                    @Html.TextAreaFor(Model => Model.Raison, new { @class = "form-control", })
                </div>
            </div>

        </div>

        <div class="row">

            <div class="col-lg-5">
                <div class="form-group">
                    @Html.LabelFor(Model => Model.Montant)
                    @Html.TextBoxFor(Model => Model.Montant, new { @class = "form-control" })
                </div>
            </div>

            <div class="col-lg-4">
                <div class="form-group">
                    @Html.LabelFor(Model => Model.Date)
                    @Html.TextBoxFor(Model => Model.Date, new { @class = "form-control", type = "date", placeholder = "Date" })
                </div>
            </div>

            <div class="col-lg-3">
                <div class="form-group">
                    @Html.LabelFor(Model => Model.Date)
                    @Html.TextBoxFor(Model => Model.Date, new { @class = "form-control", placeholder = "Heure" })
                </div>
            </div>

            <div class="col-lg-12">
                <div class="form-group">
                    @Html.LabelFor(Model => Model.Commentaire)
                    @Html.TextAreaFor(Model => Model.Commentaire, new { @class = "form-control", })
                </div>
            </div>

        </div>

            <div class="row" style="margin-top:3em">

                <div class="col-lg-4 col-lg-offset-2">
                    <div class="form-group">
                        <input class="btn btn-primary" type="submit" value="Enregistrer" style="width:100%" />
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <a href="" class="btn btn-warning" style="width:100%">
                            <span class="glyphicon glyphicon-circle-arrow-left"></span>
                            Retourner
                        </a>
                    </div>
                </div>
            </div>
        }

    </div>

</div>


